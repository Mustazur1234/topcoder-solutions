using namespace std;

class SellingFruits {
public:
	int maxDays(int, int, int, int);
};

int SellingFruits::maxDays(int x, int f, int d, int p) {
	int ans=0;
	
	 //unsigned long long int mul=f*x;
if(f>d/x){
int val1=d/x;
cout<<"val is "<<val1<<endl;
int val2=f;;
return min(val1,val2);
}
else{
	d=d-x*f;// money left
   ans=d/(p+x);
	
	}
	

return ans+f;
}
